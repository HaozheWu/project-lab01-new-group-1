<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".timecontrol">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Time Controlling"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:gravity="center"
                android:text="Your working Time"
                android:textColor="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Every"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start at"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="78dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="182dp"
                    android:layout_weight="1"
                    android:text="End at" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button15"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:onClick="showSingleAlertDialog"
                    android:text="Change Weeksdays"
                    android:textSize="8sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showTimePickerDialog"
                    android:text="Change Starting Time"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showTimePickerDialog2"
                    android:text="Change Ending Time"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button17"
                    android:layout_width="90dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="20dp"
                    android:onClick="confirm"
                    android:text="Add To My File" />

                <Button
                    android:id="@+id/button18"
                    android:layout_width="94dp"
                    android:layout_height="69dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:onClick="back"
                    android:text="Back To Home" />

                <Button
                    android:id="@+id/button16"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:onClick="update"
                    android:text="update" />

                <Button
                    android:id="@+id/button19"
                    android:layout_width="105dp"
                    android:layout_height="67dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="35dp"
                    android:onClick="delete"
                    android:text="Delete" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listViewServices"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_above="@id/textView14"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1">

                </ListView>

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="424dp"
                    android:layout_height="119dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="33dp"
                    android:layout_weight="1"
                    android:text="Long Click To Change Your Working Time"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
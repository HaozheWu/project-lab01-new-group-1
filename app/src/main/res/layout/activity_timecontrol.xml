<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".timecontrol">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            android:layout_height="111dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Hours of Work"
            android:textSize="36sp" />


            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="#008B3D3D"
                android:onClick="back"
                app:srcCompat="@drawable/back111" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="69dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                app:srcCompat="@mipmap/ic_clinic_logo_01" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@mipmap/ic_title01" />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="22dp"
                    android:fontFamily="monospace"
                    android:text="Employee Centre"
                    android:textColor="#FFFFA200" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Edit working Time"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Eevery: "
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#1EFFFFFF"
                    android:onClick="showSingleAlertDialog"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/week" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start at: "
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/colorAccent" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="#0FFFFFFF"
                    android:onClick="showTimePickerDialog"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/clock" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="End at: "
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=":"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="#12FFFFFF"
                    android:onClick="showTimePickerDialog2"
                    android:scaleType="centerInside"
                    android:src="@drawable/clock"></ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/border_line_while"
                    android:onClick="confirm"
                    android:text="Add "
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_line_while"
                    android:onClick="update"
                    android:text="update"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_line_while"
                    android:onClick="delete"
                    android:text="Delate"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_line_while"
                    android:onClick="back"
                    android:text="back"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:text="Working Schedule"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Long press to selecting  working time" />
            </LinearLayout>

            <ListView
                android:id="@+id/listViewServices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/textView14"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

            </ListView>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcomeemployee">

    <Button
        android:id="@+id/button11"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:onClick="back"
        android:text="Button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="69dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="45dp"
                    app:srcCompat="@mipmap/ic_clinic_logo_01" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="243dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        app:srcCompat="@mipmap/ic_title01" />

                    <TextView
                        android:id="@+id/subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="monospace"
                        android:text="Employee Centre"
                        android:textColor="#FFB300" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:text="Welcome Back "
                android:textColor="#050505"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FF050505"
                android:textSize="27sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="41dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:gravity="center">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="11dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/centre" />

            <Button
                android:id="@+id/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFB300"
                android:onClick="Onclick_signUp"
                android:text="My Employee Center"
                android:textColor="#F8FFFFFF"
                android:textSize="19sp" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>